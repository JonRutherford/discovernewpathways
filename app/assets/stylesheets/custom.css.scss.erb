textarea {
  resize: vertical;
}

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  @include box-sizing(border-box);
}

input {
  height: auto !important;
}

ul {
  @include box-sizing(border-box);
}

